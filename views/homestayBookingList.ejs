        </div>
        <div class="col-md-4">
          <i class="fas fa-envelope-open"></i> contact@hbhomestay.com
        </div>
        <div class="col-md-4">
          <div class="social text-right">
            <a href="#">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#">
              <i class="fab fa-linkedin"></i>
            </a>
            <a href="#">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#">
              <i class="fab fa-pinterest"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navbar -->
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
      <a class="navbar-brand" href="../../home">
        <img src="../../assets/img/logo.png" class="logo" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../../home">Home</a>
          </li>
          <li class="nav-item mr-3">
            <a class="nav-link" href="listings.html">Featured Listings</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Manage Homestay
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="../../homestays/new">New Homestay</a>
                <a class="dropdown-item" href="../../homestays/yourhomestays">Your Homestays</a>
            </div>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../../logout">
              <i class="fas fa-user-plus"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2 class="text-center mb-5 mt-5 text-info"><%= homestay.name %> - Booking Listings</h2>
    <h4 class="mb-3 mt-3">1. Requested List</h2>
      <% if (requestedBookings.length != 0) { %>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">User</th>
              <th scope="col">Phone</th>
              <th scope="col">People</th>
              <th scope="col">Checkin</th>
              <th scope="col">Checkout</th>
              <th scope="col">Note</th>
              <th scope="col" colspan="2">Accept/Decline</th>
            </tr>
          </thead>
          <tbody>
            <% for (var request of requestedBookings) { %>
              <% var i = 1 %>
              <tr>
                <td><%=request.user.username%></td>
                <td><%=request.phone%></td>
                <td><%=request.people%></td>
                <td><%=request.checkin.toDateString()%></td>
                <td><%=request.checkout.toDateString()%></td>
                <td><%=request.note%></td>
                <td>
                  <form action="../../books/<%=request._id%>/accept" method="POST"><input type="submit" value="Accept" class="btn btn-primary"/></form>
                </td>
                <td>
                  <form action="../../books/<%=request._id%>/decline" method="POST"><input type="submit" value="Decline" class="btn btn-danger"/></form>
                </td>
              </tr>
            
            <% } %>
          </tbody>
        </table>
      <% } %>

      <h4 class="mb-3 mt-3">2. Accepted List</h2>
        <% if (acceptedBookings.length != 0) { %>
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">User</th>
                <th scope="col">Phone</th>
                <th scope="col">People</th>
                <th scope="col">Checkin</th>
                <th scope="col">Checkout</th>
                <th scope="col">Note</th>
                <th scope="col" colspan="2">Status</th>
              </tr>
            </thead>
            <tbody>
              <% for (var request of acceptedBookings) { %>
                <% var i = 1 %>
                <tr>
                  <td><%=request.user.username%></td>
                  <td><%=request.phone%></td>
                  <td><%=request.people%></td>
                  <td><%=request.checkin.toDateString()%></td>
                  <td><%=request.checkout.toDateString()%></td>
                  <td><%=request.note%></td>
                  <td>
                    <form action="../../books/<%=request._id%>/stay" method="POST"><input type="submit" value="Stay" class="btn btn-primary"/></form>
                  </td>
                </tr>
              <% i++ %>
              <% } %>
            </tbody>
          </table>
        <% } %>
      
        <h4 class="mb-3 mt-3">3. Stayed List</h2>
          <% if (stayedBookings.length != 0) { %>
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">User</th>
                  <th scope="col">Phone</th>
                  <th scope="col">People</th>
                  <th scope="col">Checkin</th>
                  <th scope="col">Checkout</th>
                  <th scope="col">Note</th>
                </tr>
              </thead>
              <tbody>
                <% for (var request of stayedBookings) { %>
                  <% var i = 1 %>
                  <tr>
                    <td><%=request.user.username%></td>
                    <td><%=request.phone%></td>
                    <td><%=request.people%></td>
                    <td><%=request.checkin.toDateString()%></td>
                    <td><%=request.checkout.toDateString()%></td>
                    <td><%=request.note%></td>
                  </tr>
                <% i++ %>
                <% } %>
              </tbody>
            </table>
          <% } %>

          <h4 class="mb-3 mt-3">4. Declined List</h2>
            <% if (declinedBookings.length != 0) { %>
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">User</th>
                    <th scope="col">Phone</th>
                    <th scope="col">People</th>
                    <th scope="col">Checkin</th>
                    <th scope="col">Checkout</th>
                    <th scope="col">Note</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var request of declinedBookings) { %>
                    <% var i = 1 %>
                    <tr>
                      <td><%=request.user.username%></td>
                      <td><%=request.phone%></td>
                      <td><%=request.people%></td>
                      <td><%=request.checkin.toDateString()%></td>
                      <td><%=request.checkout.toDateString()%></td>
                      <td><%=request.note%></td>
                    </tr>
                  <% i++ %>
                  <% } %>
                </tbody>
              </table>
            <% } %>
  </div>

  <!-- Footer -->
  <!-- <footer id="main-footer" class="py-4 bg-primary text-white text-center">
    Copyright &copy;
    <span class="year"></span> HB Homestay
  </footer> -->

  <script src="../../assets/js/bootstrap.bundle.min.js "></script>
  <script src="../../assets/js/main.js "></script>
</body>

</html>