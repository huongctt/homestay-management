<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../assets/css/all.css">
  <!-- Bootstrap -->
  <link rel="stylesheet" href="../assets/css/bootstrap.css">
  <!-- Lightbox -->
  <link href="../assets/css/lightbox.min.css" rel="stylesheet">
  <!-- Custom -->
  <link rel="stylesheet" href="../assets/css/style.css">

  <title>HB Homestay</title>
</head>

<body>
  <!-- Top Bar -->
  <section id="top-bar" class="p-3">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <i class="fas fa-phone"></i> (617)-555-5555
        </div>
        <div class="col-md-4">
          <i class="fas fa-envelope-open"></i> contact@hbhomestay.com
        </div>
        <div class="col-md-4">
          <div class="social text-right">
            <a href="#">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#">
              <i class="fab fa-linkedin"></i>
            </a>
            <a href="#">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#">
              <i class="fab fa-pinterest"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
      <a class="navbar-brand" href="../home">
        <img src="../assets/img/logo.png" class="logo" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../home">Home</a>
          </li>
          <li class="nav-item mr-3">
            <a class="nav-link" href="listings.html">Featured Listings</a>
          </li>
        <% if (user.role == "homestay owner") { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Manage Homestay
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="../homestays/new">New Homestay</a>
                <a class="dropdown-item" href="../homestays/yourhomestays">Your Homestays</a>
            </li>
        <% } else { %>
          <li class="nav-item mr-3">
            <a class="nav-link" href="../yourbooking">Your booking Listings</a>
          </li>
        <% } %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../logout">
              <i class="fas fa-user-plus"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Breadcrumb -->
  <section id="bc" class="mt-3">
    <div class="container">
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="index.html">Home</a>
          </li>
          <li class="breadcrumb-item">
            <a href="listings.html">Listings</a>
          </li>
          <li class="breadcrumb-item active"><%= homestay.name %></li>
        </ol>
      </nav>
    </div>
  </section>

  <!-- Listing -->
  <section id="listing" class="py-4">
    <div class="container">
      <!-- <a href="listings.html" class="btn btn-light mb-4">Back To Listings</a> -->
      <div class="row">
        <div class="col-md-9">
          <!-- Home Main Image -->
          <img src="../homestays/<%= homestay.id %>/images?index=0" alt="" class="img-main img-fluid mb-3">
          <!-- Thumbnails -->
          <div class="row mb-5 thumbs">
            <% for (let i = 0; i <= homestay.images.length; i++) { %>
            <div class="col-md-2">
              <a href="../homestays/<%= homestay.id %>/images?index=<%= i %>" data-lightbox="home-images">
                <img src="../homestays/<%= homestay.id %>/images?index=<%= i %>" alt="" class="img-fluid">
              </a>
            </div>
            <% } %>
          </div>
          <!-- Fields -->
          <div class="row mb-5 fields">
            <div class="col-md-6">
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary">
                  <i class="fas fa-money-bill-alt"></i> Price:
                  <span class="float-right"><%= homestay.price %></span>
                </li>
                <li class="list-group-item text-secondary">
                  <i class="fas fa-bed"></i> People:
                  <span class="float-right"><%= homestay.people %></span>
                </li>
                <!-- <li class="list-group-item text-secondary">
                  <i class="fas fa-bath"></i> Bathrooms:
                  <span class="float-right">2</span>
                </li>
                <li class="list-group-item text-secondary">
                  <i class="fas fa-car"></i> Garage:
                  <span class="float-right">2
                  </span>
                </li> -->
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary">
                  <i class="fas fa-th-large"></i> Address:
                  <span class="float-right"><%= homestay.address %></span>
                </li>
                <li class="list-group-item text-secondary">
                  <i class="fas fa-square"></i> Pool:
                  <% if (homestay.pool) {%>
                    <span class="float-right">yes
                    </span>
                  <% } else { %>
                    <span class="float-right">no
                    </span>
                  <% } %>
                </li>
                <!-- <li class="list-group-item text-secondary">
                  <i class="fas fa-calendar"></i> Listing Date:
                  <span class="float-right">8/30/2018</span>
                </li>
                <li class="list-group-item text-secondary">
                  <i class="fas fa-bed"></i> Realtor:
                  <span class="float-right">Kyle Brown
                  </span>
                </li> -->


              </ul>
            </div>
          </div>

          <!-- Description -->
          <div class="row mb-5">
            <h4>Description</h4>
            <div class="col-md-12">
              <%= homestay.description %>
            </div>
          </div>
          <br/>
          
          <!-- Review -->
          <% if (reviews.length != 0) { %>
            <h4>Reviews</h4>
            <% for (var review of reviews) { %>
            <div class="row mb-5">
              <p class="text-info col-md-12"><%= review.user.username %>
              <% if (review.rate >= 1) { %>
                <span class="fa fa-star checked"></span>
                <% if (review.rate >= 2) { %>
                <span class="fa fa-star checked"></span>
                <% if (review.rate >= 3) { %>
                <span class="fa fa-star checked"></span>
                <% if (review.rate >= 4) { %>
                <span class="fa fa-star checked"></span>
                <% if (review.rate >= 5) { %>
                  <span class="fa fa-star checked"></span>
              <% }}}}} %>
            </p>
              <div class="col-md-12">
                <%= review.review %>
              </div>
            </div>
            <% } %>
          <% } %>
        </div>
        <div class="col-md-3">
            <div class="card mb-3">
                <!-- <img class="card-img-top" src="assets/img/realtors/kyle.jpg" alt="Seller of the month"> -->
                <div class="card-body">
                  <h5 class="card-title" style ="text-align: justify !important;"><%= homestay.name %></h5>
                  <h6 class="text-secondary" style ="text-align: justify !important;">Rate: 4.6 </h6>
                  <h6 class="text-secondary" style ="text-align: justify !important;">Rentals: 53 </h6>
                  <p class="text-secondary"></p>
                </div>
              </div>
          <div class="card mb-3">
            <!-- <img class="card-img-top" src="assets/img/realtors/kyle.jpg" alt="Seller of the month"> -->
            <div class="card-body">
              <h5 class="card-title" style ="text-align: justify !important;">Homestay owner</h5>
              <h6 class="text-secondary" style ="text-align: justify !important;"><%= owner.name %></h6>
              <p class="text-secondary"></p>
            </div>
          </div>
          <% if (user._id.equals(homestay.owner._id)) {%>
            <form action="../homestays/delete/<%= homestay.id %>" method="POST">
              <input type="hidden" id="custId" name="custId" value="3487"/>
              <input type="submit" value="Delete" class="btn btn-primary btn-block mt-4"/>
            </form>
            <a href="../homestays/<%= homestay.id %>/edit" class="btn btn-primary btn-block mt-4">Edit</a>
            <a href="../homestays/<%= homestay.id %>/bookinglist" class="btn btn-primary btn-block mt-4">Booking list</a>
          <% } else { %>
            <a href="../books/<%= homestay.id %>" class="btn btn-primary btn-block mt-4">Book</a>
          <% } %>
          
        </div>
      </div>
    </div>
  </section>

  <footer id="main-footer" class="py-4 bg-primary text-white text-center">
    Copyright &copy;
    <span class="year"></span> HB Homestay
  </footer>

  <script src="../assets/js/jquery-3.3.1.min.js "></script>
  <script src="../assets/js/bootstrap.bundle.min.js "></script>
  <script src="../assets/js/lightbox.min.js"></script>
  <script src="../assets/js/main.js "></script>
</body>

</html>