<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../assets/css/all.css">
  <!-- Bootstrap -->
  <link rel="stylesheet" href="../../assets/css/bootstrap.css">
  <!-- Custom -->
  <link rel="stylesheet" href="../../assets/css/style.css">
  <title>Hb Homestay</title>
</head>

<body>
  <!-- Top Bar -->
  <section id="top-bar" class="p-3">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <i class="fas fa-phone"></i> (617)-555-5555
        </div>
        <div class="col-md-4">
          <i class="fas fa-envelope-open"></i> contact@hbhomestay.com
        </div>
        <div class="col-md-4">
          <div class="social text-right">
            <a href="#">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#">
              <i class="fab fa-linkedin"></i>
            </a>
            <a href="#">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#">
              <i class="fab fa-pinterest"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navbar -->
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
      <a class="navbar-brand" href="../../home">
        <img src="../../assets/img/logo.png" class="logo" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../../home">Home</a>
          </li>
          <li class="nav-item mr-3">
            <a class="nav-link" href="listings.html">Featured Listings</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Manage Homestay
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="../../homestays/new">New Homestay</a>
                <a class="dropdown-item" href="../../homestays/yourhomestays">Your Homestays</a>
            </div>
            </li>
          
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item mr-3">
            <a class="nav-link" href="../../logout">
              <i class="fas fa-user-plus"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2 class="text-center mb-5 mt-5 text-info"><a class="text-info" href="../../homestays/<%=homestay._id%>" ><%= homestay.name %></a> - Booking Listings</h2>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col" class="text-center" ><a href="../../homestays/<%=homestay._id%>/bookinglist">Requested List</a></th>
          <th scope="col" class="text-center" style="background-color:rgb(3, 180, 169) !important;"><a href="../../homestays/<%=homestay._id%>/acceptedlist">Accepted List</a></th>
          <th scope="col" class="text-center"><a href="../../homestays/<%=homestay._id%>/stayedlist">Stayed List</a></th>
          <th scope="col" class="text-center"><a href="../../homestays/<%=homestay._id%>/declinedlist">Declined List</a></th>
        </tr>
      </thead>
    </table>

    <div class="mb-5 ">
      <form method="GET" action="../../homestays/<%=homestay._id%>/acceptedlist">
        <div class="input-group">
          <input name="username" class="form-control rounded" placeholder="Name" type="text" style="width: 40% !important;"/>
          <select name="time" class="form-control form-selec" id="type">
            <option value="all">All</option>
            <option value="thisweek">This week</option>
            <option value="thismonth">This month</option>
          </select>
          <button class="btn btn-outline-primary">Search</button>
        </div>
			</form>
    </div>

        <% if (acceptedBookings.length != 0) { %>
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">User</th>
                <th scope="col">Phone</th>
                <th scope="col">People</th>
                <th scope="col">Checkin</th>
                <th scope="col">Checkout</th>
                <th scope="col">Note</th>
                <th scope="col" colspan="2">Status</th>
              </tr>
            </thead>
            <tbody>
              <% for (var request of acceptedBookings) { %>
                <% var i = 1 %>
                <tr>
                  <td><%=request.user.name%></td>
                  <td><%=request.phone%></td>
                  <td><%=request.people%></td>
                  <td><%=request.checkin.toDateString()%></td>
                  <td><%=request.checkout.toDateString()%></td>
                  <td><%=request.note%></td>
                  <td>
                    <form action="../../books/<%=request._id%>/stay" method="POST"><input type="submit" value="Stay" class="btn btn-primary"/></form>
                  </td>
                </tr>
              <% i++ %>
              <% } %>
            </tbody>
          </table>
          <% } else { %>
            <p class="text-center">No accepted list here</p>
          <% } %>
      
        
  </div>

  <!-- Footer -->
  <!-- <footer id="main-footer" class="py-4 bg-primary text-white text-center">
    Copyright &copy;
    <span class="year"></span> HB Homestay
  </footer> -->

  <script src="../../assets/js/bootstrap.bundle.min.js "></script>
  <script src="../../assets/js/main.js "></script>
</body>

</html>